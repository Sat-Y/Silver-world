    <script>
        // Prevent swup from handling any clicks on links by stopping propagation before swup's listeners are called
        document.addEventListener('click', (event) => {
            let target = event.target;
            while (target && target.nodeName !== 'A') {
                target = target.parentElement;
            }
            if (target && target.nodeName === 'A') {
                event.stopImmediatePropagation();
            }
        }, true);
        
        // Immediately disable swup if it's already initialized
        if (window.swup) {
            window.swup.destroy();
            window.swup = null;
        }
