    <script>
        // State management
        let albumToDelete = null;
        let albumsToDelete = [];
        let albumToEdit = null;
        let selectedAlbums = new Set();
        let allAlbums = [];
        let photosToDelete = []; // Track photos to delete

        // Fetch albums from API
        async function fetchAlbums() {
            try {
                const token = localStorage.getItem('token');
                const apiBaseUrl = 'http://localhost:3001/api';
                
                // Check if token exists
                if (!token) {
                    window.location.href = '/admin/login/';
                    return;
                }
                
                const response = await fetch(`${apiBaseUrl}/admin/albums`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const result = await response.json();

                if (result.success) {
                    allAlbums = result.data;
                    renderAlbums(allAlbums);
                    updateBulkActions();
                } else {
                    console.error('Failed to fetch albums:', result.message);
                    renderError('Failed to load albums. Please try again.');
                }
            } catch (error) {
                console.error('Error fetching albums:', error);
                renderError('An error occurred while loading albums.');
                if (error.message && error.message.includes('401')) {
                    window.location.href = '/admin/login/';
                }
            }
        }

        // Render albums in grid
        function renderAlbums(albums) {
            const albumsGrid = document.getElementById('albumsGrid');
            
            if (albums.length === 0) {
                albumsGrid.innerHTML = `
                    <div class="no-albums">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-12 h-12 mb-4">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                        </svg>
                        <p>No albums found</p>
                        <a href="/admin/albums/new">Create your first album</a>
                    </div>
                `;
                return;
            }

            albumsGrid.innerHTML = albums.map(album => `
                <div class="album-card ${selectedAlbums.has(album.id) ? 'selected' : ''}">
                    <!-- Album checkbox -->
                    <input 
                        type="checkbox" 
                        class="album-checkbox" 
                        ${selectedAlbums.has(album.id) ? 'checked' : ''}
                        onchange="toggleAlbumSelection('${album.id}', this.checked)"
                    />
                    
                    <!-- Album cover -->
                    <div class="album-cover" onclick="openEditModal('${album.id}')" style="cursor: pointer;">
                        <img 
                            src="${album.photos.length > 0 ? `http://localhost:3001${album.photos[0].url}` : 'https://via.placeholder.com/400x300?text=No+Photos'}" 
                            alt="${album.title}"
                        />
                        <span class="photo-count">${album.photos.length} photos</span>
                    </div>
                    <div class="album-info">
                        <!-- Album header -->
                        <div class="album-header">
                            <h3 class="album-title" onclick="openEditModal('${album.id}')" style="cursor: pointer;">${escapeHtml(album.title)}</h3>
                            <!-- Action buttons -->
                            <div class="action-buttons">
                                <!-- Delete button -->
                                <button 
                                    onclick="openDeleteModal('${album.id}', '${escapeHtml(album.title)}')" 
                                    class="action-btn delete-btn" 
                                    title="Delete Album"
                                >
                                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                        <p class="album-description" onclick="openEditModal('${album.id}')" style="cursor: pointer;">${album.description || ''}</p>
                        <div class="album-meta" onclick="openEditModal('${album.id}')" style="cursor: pointer;">
                            <span class="album-meta-item">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                ${formatDate(album.date)}
                            </span>
                            ${album.location ? `
                            <span class="album-meta-item">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                ${escapeHtml(album.location)}
                            </span>
                            ` : ''}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Render error state
        function renderError(message) {
            const albumsGrid = document.getElementById('albumsGrid');
            albumsGrid.innerHTML = `
                <div class="error-container">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-12 h-12 mb-4" style="color: #ef4444;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <p>${message}</p>
                    <button onclick="fetchAlbums()" class="retry-btn">Try Again</button>
                </div>
            `;
        }

        // Toggle album selection
        function toggleAlbumSelection(albumId, isChecked) {
            console.log('=== 切换相册选择 ===', albumId, isChecked);
            
            if (isChecked) {
                selectedAlbums.add(albumId);
                console.log('添加到选中集合:', albumId, '当前选中数量:', selectedAlbums.size);
            } else {
                selectedAlbums.delete(albumId);
                console.log('从选中集合删除:', albumId, '当前选中数量:', selectedAlbums.size);
            }
            
            // 立即更新批量操作区域 - 确保单个选中时显示删除按钮
            updateBulkActions();
            
            // 更新DOM中所有相册卡片的选中状态
            const albumCards = document.querySelectorAll('.album-card');
            albumCards.forEach(card => {
                const checkbox = card.querySelector('.album-checkbox');
                if (checkbox) {
                    // 从onchange事件获取相册ID
                    const cardAlbumId = checkbox.getAttribute('onchange').match(/'([^']+)'/)[1];
                    if (selectedAlbums.has(cardAlbumId)) {
                        card.classList.add('selected');
                        checkbox.checked = true;
                        console.log('更新DOM - 选中:', cardAlbumId);
                    } else {
                        card.classList.remove('selected');
                        checkbox.checked = false;
                        console.log('更新DOM - 取消选中:', cardAlbumId);
                    }
                }
            });
        }

        // Select all albums
        function toggleSelectAll() {
            const selectAllCheckbox = document.getElementById('selectAllCheckbox');
            const isChecked = selectAllCheckbox.checked;
            
            if (isChecked) {
                // Select all albums
                selectedAlbums = new Set(allAlbums.map(album => album.id));
            } else {
                // Deselect all albums
                selectedAlbums.clear();
            }
            
            updateBulkActions();
            renderAlbums(allAlbums);
        }

        // Update bulk actions UI
        function updateBulkActions() {
            console.log('=== 更新批量操作区域 ===');
            console.log('选中的相册数量:', selectedAlbums.size);
            
            const bulkActions = document.getElementById('bulkActions');
            const selectedCount = document.getElementById('selectedCount');
            
            if (!bulkActions || !selectedCount) {
                console.error('批量操作元素未找到');
                return;
            }
            
            // 无论选中多少个相册，只要有选中就显示批量操作区域
            if (selectedAlbums.size > 0) {
                console.log('显示批量操作区域');
                bulkActions.classList.remove('hidden');
                selectedCount.textContent = selectedAlbums.size;
            } else {
                console.log('隐藏批量操作区域');
                bulkActions.classList.add('hidden');
            }
            
            // Update select all checkbox state
            const selectAllCheckbox = document.getElementById('selectAllCheckbox');
            if (selectAllCheckbox) {
                selectAllCheckbox.checked = selectedAlbums.size === allAlbums.length && allAlbums.length > 0;
            }
        }

        // Open delete confirmation modal
        function openDeleteModal(albumId, albumTitle) {
            albumToDelete = albumId;
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        // Close delete confirmation modal
        function closeDeleteModal() {
            albumToDelete = null;
            document.getElementById('deleteModal').classList.add('hidden');
        }

        // Delete single album
        async function deleteAlbum(albumId) {
            try {
                console.log('=== 开始删除单个相册 ===', albumId);
                
                const token = localStorage.getItem('token');
                const apiBaseUrl = 'http://localhost:3001/api';
                
                if (!token) {
                    window.location.href = '/admin/login/';
                    return;
                }
                
                // 确认API路径
                const deleteUrl = `${apiBaseUrl}/admin/albums/${albumId}`;
                console.log('删除API路径:', deleteUrl);
                
                const response = await fetch(deleteUrl, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                console.log('删除API响应状态:', response.status);
                const result = await response.json();
                console.log('删除API响应结果:', result);

                if (result.success) {
                    // Remove from selected albums if present
                    selectedAlbums.delete(albumId);
                    fetchAlbums();
                    closeDeleteModal();
                    updateBulkActions();
                    console.log('Album deleted successfully');
                    alert('相册删除成功');
                } else {
                    console.error('Failed to delete album:', result.message);
                    alert('删除相册失败: ' + result.message);
                }
            } catch (error) {
                console.error('Error deleting album:', error);
                if (error.message && error.message.includes('401')) {
                    window.location.href = '/admin/login/';
                } else {
                    alert('删除相册时发生错误: ' + error.message);
                }
            }
        }

        // Open bulk delete confirmation modal
        function openBulkDeleteModal() {
            const bulkDeleteCount = document.getElementById('bulkDeleteCount');
            bulkDeleteCount.textContent = selectedAlbums.size;
            document.getElementById('bulkDeleteModal').classList.remove('hidden');
        }

        // Close bulk delete confirmation modal
        function closeBulkDeleteModal() {
            albumsToDelete = [];
            document.getElementById('bulkDeleteModal').classList.add('hidden');
        }

        // Delete selected albums
        async function deleteSelectedAlbums() {
            try {
                const token = localStorage.getItem('token');
                const apiBaseUrl = 'http://localhost:3001/api';
                
                if (!token) {
                    window.location.href = '/admin/login/';
                    return;
                }
                
                // Convert Set to array
                const albumsToDelete = Array.from(selectedAlbums);
                
                // Delete each album
                for (const albumId of albumsToDelete) {
                    await fetch(`${apiBaseUrl}/admin/albums/${albumId}`, {
                        method: 'DELETE',
                        headers: {
                            'Authorization': `Bearer ${token}`,
                            'Content-Type': 'application/json'
                        }
                    });
                }
                
                // Clear selection and refresh
                selectedAlbums.clear();
                fetchAlbums();
                closeBulkDeleteModal();
                updateBulkActions();
                console.log('Selected albums deleted successfully');
            } catch (error) {
                console.error('Error deleting selected albums:', error);
                if (error.message && error.message.includes('401')) {
                    window.location.href = '/admin/login/';
                }
            }
        }

        // Open edit modal
        function openEditModal(albumId) {
            albumToEdit = allAlbums.find(album => album.id === albumId);
            if (!albumToEdit) return;
            
            // Reset photos to delete list when opening edit modal
            photosToDelete = [];
            
            // Fill form with current album data
            document.getElementById('editAlbumTitle').value = albumToEdit.title;
            document.getElementById('editAlbumDescription').value = albumToEdit.description || '';
            document.getElementById('editAlbumLocation').value = albumToEdit.location || '';
            document.getElementById('editAlbumTags').value = albumToEdit.tags.join(', ') || '';
            
            // Format date for input field (YYYY-MM-DD)
            const formattedDate = new Date(albumToEdit.date).toISOString().split('T')[0];
            document.getElementById('editAlbumDate').value = formattedDate;
            
            // Update cover preview
            const coverImage = document.getElementById('coverImage');
            const coverPreview = document.getElementById('coverPreview');
            if (albumToEdit.photos.length > 0) {
                coverImage.src = `http://localhost:3001${albumToEdit.photos[0].url}`;
                coverImage.style.display = 'block';
            } else {
                coverImage.style.display = 'none';
                coverImage.src = '';
            }
            
            // Render photos list
            renderPhotosList();
            
            // Show modal
            document.getElementById('editModal').classList.remove('hidden');
        }

        // Close edit modal
        function closeEditModal() {
            albumToEdit = null;
            photosToDelete = []; // Reset photos to delete list
            document.getElementById('editModal').classList.add('hidden');
        }

        // Render photos list in edit modal
        function renderPhotosList() {
            if (!albumToEdit) return;
            
            const photosList = document.getElementById('photosList');
            
            if (albumToEdit.photos.length === 0) {
                photosList.innerHTML = '<p style="text-align: center; color: #6b7280; margin-top: 16px;">No photos in this album</p>';
                return;
            }
            
            photosList.innerHTML = albumToEdit.photos.map(photo => `
                <div class="photo-item">
                    <img src="http://localhost:3001${photo.url}" alt="Photo" />
                    <button 
                        class="remove-photo-btn" 
                        onclick="removePhoto('${photo.id}')"
                        title="Remove Photo"
                    >
                        ×
                    </button>
                </div>
            `).join('');
        }

        // Remove photo from album
        function removePhoto(photoId) {
            if (!albumToEdit) return;
            
            // Add photo ID to delete list
            photosToDelete.push(photoId);
            
            // Remove photo from album
            albumToEdit.photos = albumToEdit.photos.filter(photo => photo.id !== photoId);
            
            // Update cover if the removed photo was the cover
            if (albumToEdit.photos.length === 0) {
                const coverImage = document.getElementById('coverImage');
                coverImage.style.display = 'none';
                coverImage.src = '';
            } else {
                const coverImage = document.getElementById('coverImage');
                coverImage.src = `http://localhost:3001${albumToEdit.photos[0].url}`;
                coverImage.style.display = 'block';
            }
            
            // Re-render photos list
            renderPhotosList();
        }

        // Change cover image
        function changeCover() {
            document.getElementById('coverFile').click();
        }

        // Handle cover file selection
        function handleCoverSelection(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            // Validate file type - only allow images
            if (!file.type.startsWith('image/')) {
                alert('Please select an image file');
                event.target.value = ''; // Clear the input
                return;
            }
            
            const coverImage = document.getElementById('coverImage');
            const coverPreview = document.getElementById('coverPreview');
            
            // Create object URL for preview
            const reader = new FileReader();
            reader.onload = function(e) {
                coverImage.src = e.target.result;
                coverImage.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }

        // Add photos to album
        function addPhotos() {
            const addPhotosInput = document.getElementById('addPhotosInput');
            addPhotosInput.click();
            
            // Add event listener for file selection
            addPhotosInput.onchange = function(event) {
                const files = event.target.files;
                if (!files || files.length === 0) return;
                
                // Validate all selected files are images
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    if (!file.type.startsWith('image/')) {
                        alert('Please select only image files');
                        event.target.value = ''; // Clear the input
                        return;
                    }
                }
                
                // If all files are images, continue with upload
                saveAlbumEdit();
            };
        }

        // Save album edits
        async function saveAlbumEdit() {
            if (!albumToEdit) return;
            
            try {
                console.log('=== 开始保存相册编辑 ===', albumToEdit.id);
                
                const token = localStorage.getItem('token');
                const apiBaseUrl = 'http://localhost:3001/api';
                
                if (!token) {
                    window.location.href = '/admin/login/';
                    return;
                }
                
                // 获取表单数据
                const title = document.getElementById('editAlbumTitle').value;
                const description = document.getElementById('editAlbumDescription').value;
                const location = document.getElementById('editAlbumLocation').value;
                const date = document.getElementById('editAlbumDate').value;
                
                // Parse tags
                const tagsInput = document.getElementById('editAlbumTags').value;
                const tags = tagsInput.split(',').map(tag => tag.trim()).filter(tag => tag);
                
                // 准备数据
                const formData = new FormData();
                formData.append('title', title);
                formData.append('description', description);
                formData.append('location', location);
                formData.append('date', date);
                formData.append('tags', JSON.stringify(tags));
                
                // Add cover file if selected
                const coverFileInput = document.getElementById('coverFile');
                if (coverFileInput && coverFileInput.files && coverFileInput.files[0]) {
                    const coverFile = coverFileInput.files[0];
                    console.log('添加封面文件:', coverFile.name);
                    formData.append('cover', coverFile);
                }
                
                // Add new photos if selected
                const addPhotosInput = document.getElementById('addPhotosInput');
                if (addPhotosInput && addPhotosInput.files && addPhotosInput.files.length > 0) {
                    const newPhotos = addPhotosInput.files;
                    console.log('添加新照片:', newPhotos.length);
                    Array.from(newPhotos).forEach((file, index) => {
                        console.log('添加照片:', index, file.name);
                        formData.append('photos', file);
                    });
                }
                
                // 记录要删除的照片
                formData.append('photosToDelete', JSON.stringify(photosToDelete));
                console.log('=== 删除的照片ID列表 ===', photosToDelete);
                
                // 发送API请求
                console.log('发送API请求更新相册:', albumToEdit.id);
                const response = await fetch(`${apiBaseUrl}/admin/albums/${albumToEdit.id}`, {
                    method: 'PUT',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    },
                    body: formData
                });
                
                console.log('API响应状态:', response.status);
                
                const result = await response.json();
                console.log('API响应结果:', result);
                
                if (result.success) {
                    console.log('相册更新成功');
                    fetchAlbums();
                    closeEditModal();
                    // photosToDelete is reset in closeEditModal
                } else {
                    console.error('Failed to update album:', result.message);
                    alert('更新相册失败: ' + result.message);
                    // Reset photosToDelete even if save failed
                    photosToDelete = [];
                }
            } catch (error) {
                console.error('Error updating album:', error);
                if (error.message && error.message.includes('401')) {
                    window.location.href = '/admin/login/';
                } else {
                    alert('更新相册时发生错误: ' + error.message);
                }
            }
        }

        // Helper functions
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
        }

        // Event listeners setup
        function setupEventListeners() {
            console.log('=== Setting up event listeners ===');
            
            // Delete modal events - Single delete
            const cancelDeleteBtn = document.getElementById('cancelDelete');
            const confirmDeleteBtn = document.getElementById('confirmDelete');
            const deleteModal = document.getElementById('deleteModal');
            
            console.log('Delete modal elements:', {
                cancelDeleteBtn,
                confirmDeleteBtn,
                deleteModal
            });
            
            if (cancelDeleteBtn) {
                cancelDeleteBtn.addEventListener('click', closeDeleteModal);
            }
            
            if (confirmDeleteBtn) {
                confirmDeleteBtn.addEventListener('click', () => {
                    console.log('=== Confirm delete clicked, deleting album:', albumToDelete);
                    if (albumToDelete) {
                        deleteAlbum(albumToDelete);
                    }
                });
            }
            
            // Bulk delete modal events
            document.getElementById('cancelBulkDelete')?.addEventListener('click', closeBulkDeleteModal);
            document.getElementById('confirmBulkDelete')?.addEventListener('click', deleteSelectedAlbums);
            document.getElementById('deleteSelectedBtn')?.addEventListener('click', openBulkDeleteModal);
            
            // Edit modal events
            const cancelEditBtn = document.getElementById('cancelEdit');
            const saveEditBtn = document.getElementById('saveEdit');
            const changeCoverBtn = document.getElementById('changeCoverBtn');
            const coverFileInput = document.getElementById('coverFile');
            const addPhotosSection = document.getElementById('addPhotosSection');
            
            console.log('Edit modal elements:', {
                cancelEditBtn,
                saveEditBtn,
                changeCoverBtn,
                coverFileInput,
                addPhotosSection
            });
            
            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', closeEditModal);
            }
            
            if (saveEditBtn) {
                saveEditBtn.addEventListener('click', saveAlbumEdit);
            }
            
            if (changeCoverBtn) {
                changeCoverBtn.addEventListener('click', changeCover);
            }
            
            if (coverFileInput) {
                coverFileInput.addEventListener('change', handleCoverSelection);
            }
            
            if (addPhotosSection) {
                addPhotosSection.addEventListener('click', addPhotos);
            }
            
            // Select all checkbox
            document.getElementById('selectAllCheckbox')?.addEventListener('change', toggleSelectAll);
            
            // Close modals when clicking outside
            document.getElementById('deleteModal')?.addEventListener('click', (e) => {
                if (e.target.id === 'deleteModal') {
                    closeDeleteModal();
                }
            });
            
            document.getElementById('bulkDeleteModal')?.addEventListener('click', (e) => {
                if (e.target.id === 'bulkDeleteModal') {
                    closeBulkDeleteModal();
                }
            });
            
            document.getElementById('editModal')?.addEventListener('click', (e) => {
                if (e.target.id === 'editModal') {
                    closeEditModal();
                }
            });
            
            console.log('=== Event listeners setup complete ===');
        }

        // Expose functions to global scope for inline event handlers
        window.toggleAlbumSelection = toggleAlbumSelection;
        window.openEditModal = openEditModal;
        window.openDeleteModal = openDeleteModal;
        window.toggleSelectAll = toggleSelectAll;
        window.removePhoto = removePhoto;

        // Fetch albums immediately when the script runs
        fetchAlbums();
        setupEventListeners();

        // Disable swup on admin pages
        if (window.swup) {
            window.swup.destroy();
            window.swup = null;
        }

        // Logout functionality
        const logoutBtn = document.getElementById('logoutBtn');
        if (logoutBtn) {
            logoutBtn.addEventListener('click', () => {
                localStorage.removeItem('token');
                localStorage.removeItem('user');
                window.location.href = '/admin/login/';
            });
        }
    </script>
