            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <header class="header">
                <h2>Posts Management</h2>
                <div class="header-actions">
                    <button class="logout-btn" id="logoutBtn">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        Logout
                    </button>
                </div>
            </header>
            <main class="content">
                <div class="posts-content">
                    <!-- File Upload Section -->
                    <div class="form-container" style="margin-bottom: 20px;">
                        <div style="display: flex; align-items: center; gap: 12px;">
                            <h3 style="margin: 0;">Upload Markdown File</h3>
                            <input type="file" id="markdownFile" accept=".md" style="display: none;">
                            <button id="uploadBtn" class="btn btn-primary">
                                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-5 h-5 mr-2" style="display: inline-block; margin-right: 6px;">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                                </svg>
                                Upload File
                            </button>
                            <div id="uploadStatus" style="flex: 1; color: #6b7280; font-size: 0.875rem;"></div>
                        </div>
                    </div>
                    
                    <!-- Posts Table -->
                    <div class="posts-table-container">
                        <table class="posts-table">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Published</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="postsTableBody">
                                <!-- Posts will be loaded dynamically -->
                                <tr>
                                    <td colspan="3" class="loading-container">
                                        <div class="loading-spinner"></div>
                                        <p>Loading posts...</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal-overlay hidden">
        <div class="modal">
            <div class="modal-header">
                <h3 class="modal-title">Confirm Delete</h3>
            </div>
            <div class="modal-content">
                <p>Are you sure you want to delete this post? This action cannot be undone.</p>
            </div>
            <div class="modal-actions">
                <button id="cancelDelete" class="modal-btn modal-btn-secondary">Cancel</button>
                <button id="confirmDelete" class="modal-btn modal-btn-danger">Delete</button>
            </div>
        </div>
    </div>

    <!-- Edit Post Modal -->
    <div id="editModal" class="modal-overlay hidden">
        <div class="modal">
            <div class="modal-header">
                <h3 class="modal-title">Edit Post</h3>
            </div>
            <div class="modal-content" style="text-align: left;">
                <form id="editPostForm">
                    <div style="margin-bottom: 16px;">
                        <label for="editTitle" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Title</label>
                        <input type="text" id="editTitle" name="title" required style="width: 100%; padding: 8px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 14px; transition: border-color 0.3s;">
                    </div>
                    
                    <div style="margin-bottom: 16px;">
                        <label for="editTags" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Tags (comma-separated)</label>
                        <input type="text" id="editTags" name="tags" placeholder="e.g., tech, life, travel" style="width: 100%; padding: 8px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 14px; transition: border-color 0.3s;">
                    </div>
                    
                    <div style="margin-bottom: 16px;">
                        <label for="editDescription" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Description</label>
                        <textarea id="editDescription" name="description" rows="3" style="width: 100%; padding: 8px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 14px; resize: vertical; transition: border-color 0.3s;"></textarea>
                    </div>
                    
                    <div style="margin-bottom: 16px;">
                        <label for="editImage" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Image URL</label>
                        <input type="text" id="editImage" name="image" placeholder="https://example.com/image.jpg" style="width: 100%; padding: 8px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 14px; transition: border-color 0.3s;">
                    </div>
                    
                    <div style="margin-bottom: 16px;">
                        <label for="editCategory" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Category</label>
                        <input type="text" id="editCategory" name="category" style="width: 100%; padding: 8px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 14px; transition: border-color 0.3s;">
                    </div>
                    
                    <div style="margin-bottom: 16px;">
                        <label for="editPublished" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Published Date</label>
                        <input type="date" id="editPublished" name="published" required style="width: 100%; padding: 8px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 14px; transition: border-color 0.3s;">
                    </div>
                    
                    <div style="margin-bottom: 16px;">
                        <label for="editUpdated" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Updated Date</label>
                        <input type="date" id="editUpdated" name="updated" style="width: 100%; padding: 8px 12px; border: 1px solid #d1d5db; border-radius: 6px; font-size: 14px; transition: border-color 0.3s;">
                    </div>
                    
                    <div style="margin-bottom: 16px;">
                        <label for="editDraft" style="display: block; margin-bottom: 6px; font-weight: 500; color: #374151;">Draft</label>
                        <input type="checkbox" id="editDraft" name="draft" style="margin-right: 8px;">
                        <span style="color: #6b7280; font-size: 14px;">Mark as draft</span>
                    </div>
                </form>
            </div>
            <div class="modal-actions">
                <button id="cancelEdit" class="modal-btn modal-btn-secondary">Cancel</button>
                <button id="saveEdit" class="modal-btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
    


    <script>
        // State for modals
        let postToDelete = null;
        let postToEdit = null;

        // Fetch posts from API
        async function fetchPosts() {
            try {
                const token = localStorage.getItem('token');
                const apiBaseUrl = 'http://localhost:3001/api';
                
                // Check if token exists
                if (!token) {
                    window.location.href = '/admin/login/';
                    return;
                }
                
                console.log('Fetching posts from:', `${apiBaseUrl}/admin/posts`);
                console.log('Token:', token);
                
                const response = await fetch(`${apiBaseUrl}/admin/posts`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                console.log('Response status:', response.status);
                console.log('Response headers:', response.headers);
                
                // Check if response is ok
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const result = await response.json();

                // Debug: Log the raw API response to check encoding
                console.log('Raw API response:', result);

                if (result.success) {
                    renderPosts(result.data);
                } else {
                    renderError('Failed to load posts. Please try again.');
                }
            } catch (error) {
                console.error('Error fetching posts:', error);
                console.error('Error stack:', error.stack);
                renderError('An error occurred while loading posts. Error: ' + error.message);
                if (error.message && error.message.includes('401')) {
                    window.location.href = '/admin/login/';
                }
            }
        }

        // Render posts in table
        function renderPosts(posts) {
            const tbody = document.getElementById('postsTableBody');
            
            if (posts.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="3" class="loading-container">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-12 h-12 mb-4">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
                            </svg>
                            <p>No posts found</p>
                        </td>
                    </tr>
                `;
                return;
            }

            // Clear tbody first
            tbody.innerHTML = '';
            
            // Create and append rows with proper event listeners
            posts.forEach(post => {
                const row = document.createElement('tr');
                
                // Title cell with enhanced design
                const titleCell = document.createElement('td');
                titleCell.style.fontWeight = '500';
                titleCell.style.fontSize = '0.9375rem';
                titleCell.style.color = '#111827';
                
                // Create plain text title (no hyperlink)
                titleCell.textContent = post.title;
                
                // Combine title and status (without status badge)
                titleCell.appendChild(document.createTextNode(''));
                
                // Date cell with enhanced design
                const dateCell = document.createElement('td');
                dateCell.className = 'date-cell';
                dateCell.style.fontSize = '0.875rem';
                dateCell.style.color = '#6b7280';
                dateCell.style.fontFamily = 'monospace';
                dateCell.textContent = formatDate(post.publishedDate);
                
                // Actions cell with enhanced design
                const actionsCell = document.createElement('td');
                const actionButtonsDiv = document.createElement('div');
                actionButtonsDiv.className = 'action-buttons';
                
                // Edit button
                const editButton = document.createElement('button');
                editButton.className = 'action-btn edit-btn';
                editButton.title = 'Edit';
                editButton.innerHTML = '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>';
                editButton.addEventListener('click', () => {
                    openEditModal(post);
                });
                
                // Delete button with proper event listener
                const deleteButton = document.createElement('button');
                deleteButton.className = 'action-btn delete-btn';
                deleteButton.title = 'Delete';
                deleteButton.innerHTML = '<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>';
                deleteButton.addEventListener('click', () => {
                    // Open delete modal with post ID and title
                    postToDelete = post.id;
                    document.getElementById('deleteModal').classList.remove('hidden');
                });
                
                actionButtonsDiv.appendChild(editButton);
                actionButtonsDiv.appendChild(deleteButton);
                actionsCell.appendChild(actionButtonsDiv);
                
                // Append cells to row
                row.appendChild(titleCell);
                row.appendChild(dateCell);
                row.appendChild(actionsCell);
                
                // Append row to tbody
                tbody.appendChild(row);
            });
        }

        // Render error state
        function renderError(message) {
            const tbody = document.getElementById('postsTableBody');
            tbody.innerHTML = `
                <tr>
                    <td colspan="3" class="loading-container">
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-12 h-12 mb-4" style="color: #ef4444;">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <p>${message}</p>
